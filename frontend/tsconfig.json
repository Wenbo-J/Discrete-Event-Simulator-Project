{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "files": [],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.js",
    "*.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx", 
    "jest.config.cjs"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.app.json" }
  ],
  "exclude": ["node_modules"]
}
